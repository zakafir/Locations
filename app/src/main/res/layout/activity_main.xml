<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afir.location.MainActivity">

    <TextView
        android:id="@+id/latitudeLocationTxt"
        android:layout_width="105dp"
        android:layout_height="18dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/longitudeLocationTxt"
        android:layout_width="91dp"
        android:layout_height="18dp"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/latitudeLocationTxt"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/latTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/latitudeLocationTxt"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        app:layout_constraintHorizontal_bias="0.522" />

    <TextView
        android:id="@+id/longTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/longitudeLocationTxt"
        android:layout_marginRight="8dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/latTxt"
        app:layout_constraintHorizontal_bias="0.516" />

</android.support.constraint.ConstraintLayout>
